                        <script>
                            document.getElementById('contactForm').addEventListener('submit', async function (e) {
                                e.preventDefault();

                                const recaptchaToken = await grecaptcha.execute('6LdlEbUqAAAAANYB2X6V4Bpf2kwwQUVo9rNyC5Ph', { action: 'submit' });

                                const formData = {
                                    name: document.querySelector('[name="name"]').value,
                                    email: document.querySelector('[name="email"]').value,
                                    comment: document.querySelector('[name="comment"]').value,
                                    recaptchaToken: recaptchaToken, // Asegúrate de incluir el token
                                };

                                const response = await fetch('/submit', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify(formData),
                                });

                                const result = await response.json();
                                console.log(result);
                            });
                        </script>
